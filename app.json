{
    "name": "SmsBlast-TeLeTiPs",
    "description": "Powerful Telegram bot to get everyone's attention by mentioning all members in the chat. PingAll bot has some additional cool features and also it can work in channels. It's easy, fast and self deployable.",
    "repository": "https://github.com/lizyangelxdark/SmsBlastTelegram",
    "logo": "https://telegra.ph/file/fd3d0cffbabc214043e0d.jpg",
    "keywords": [
        "everyone bot",
        "Telegram bot",
        "Pyrogram bot"
    ],
    "env": {
        "API_ID": {
            "description": "Get from my.telegram.org/apps",
            "required": true
        },
        "API_HASH": {
            "description": "Get from my.telegram.org/apps",
            "required": true
        },
        "BOT_TOKEN": {
            "description": "Get from Telegram's @BotFather",
            "required": true
        }
    },
    "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ]
}
